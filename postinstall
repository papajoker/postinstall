#!/usr/bin/sh
shopt -s extglob
#set -x

title="Post install finalisation"

LC=1
LZ=2
LK=3
lib="$LC"

OK=0
path="${0%\/*}"
dbg="/tmp/${0##*\/}.out"
echo "">$dbg



check()
{
    if [ -f '/usr/bin/kdialog' ]; then
        lib=$LK
    elif [ -f '/usr/bin/zenity' ]; then
        lib=$LZ
    fi
}
check
# can force zenity or kdialog with param
case "$1" in
    -k) lib=$LK;;
    -z) lib=$LZ;;
    -c) lib=$LC;;
esac
if (( lib != LC )); then
    exec &> $dbg
fi

[[ "$1" == "-h" ]] && {
    echo -e "Params:
    -c : console mode
    -z : zenity GUI
    -k : kdialog GUI";
    exit 0;
}

### dialogs

question()
# if param2 : force yes
{
    local label="$1"
    [[ "$2" -gt "0" ]] && return 0
    if (( lib == LK )); then
        kdialog --yesno "$label" --title "$title" 2>/dev/null
    elif (( lib  == LZ )); then
        zenity --question --text="$label" --title="$title" 2>/dev/null
    else
        local answer
        printf "\n:: %s" "$label [Y/n] "
        read -r -n 1 answer
        echo
        case $answer in
            Y|y|'') return 0;;
            *) return 1;
        esac
    fi
}
listing()
{
    if (( lib == LK )); then
        kdialog --textbox  "$dbg" --title "$title" 512 400 2>/dev/null
    elif (( lib == LZ )); then
        zenity --text-info --title "$title" --filename="$dbg" --width=512 --height=400 2>/dev/null
    fi
}

progres()
{
    local label="${1:-"run Pacman"} ..."
    if (( lib == LZ )); then
        zenity --progress \
            --title="$title" \
            --text="$label" \
            --percentage=0 2>/dev/null
    else
        :
    fi
}


### files conf

conf_gettext()
# retrieve locale label
{
    local txt=$(awk -F':' '/#'${LANG:0:2}':/ { print $2}' "$1")
    [[ -z "$txt" ]] && txt=$(grep -m 1 '^#' "$1")
    echo "$txt"
}

conf_getpkg()
# retrieve packages
{
    local list=$(grep -v "#" "$1")
    echo "${list// /\/n}"
}

conf_forced()
# no question ?
{
    local nb=$(grep -c "^#forced$" "$1")
    echo "$nb"
}

### run

instal()
# install package par param $2 (-S or -U)
{
    local pkg_list="$1"
    local cmd="$2"
    local txt=$(conf_gettext "$pkg_list")
    question "$txt" "$(conf_forced "$pkg_list")"
    txt="${txt//\?/}"
    if (( "$?"==0 )); then
        local pkgs=( $(conf_getpkg "$pkg_list") )
        echo -e "\n--$txt"
        echo "--pacman -$cmd ${pkgs[@]} --noconfirm --needed :"
        pacman -$cmd "${pkgs[@]}" --noconfirm --needed | progres "$txt"
        if (( "$?" != 0 )); then
            OK=1
        fi
    else
        echo "--not installed: $txt"
    fi
}

cd "$path"

for pkg_list in *.pkgs ; do
    instal "$pkg_list" "S"
done

for pkg_list in *.aurs ; do
    instal "$pkg_list" "U"
done

if [[ -f "script.sh" ]]; then
    echo
    if (( lib != LC )); then
        ./script.sh &>>$dbg | progres "script exec..."
    else
        ./script.sh
    fi
    (( "$?" != 0 )) && OK=1
fi

listing

[[ -z "$path" ]] && exit 3
if (( "$OK" != 1 )); then
    # no errors, auto remove
    question "auto remove this install software ?"
    if (( "$?"==0 )); then
        # rm -vrf "$path"
        #rm "$0" "$path/*.pkgs" "$path/*.aurs" "$path/*.desktop "
        #rm "$path/*.tar.xz"
        :
    fi
fi

rm "$dbg" 2>/dev/null
